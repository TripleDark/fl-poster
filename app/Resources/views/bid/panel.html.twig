{% extends 'panel-base.html.twig' %}

{% block body %}
    <div class="b-main">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="float-left" style="padding: 5px 0;">
                        <h2>Список задач</h2>
                    </div>
                    <div class="float-right" style="padding: 5px 0;">
                        <a href="/create-bid" role="button" class="btn btn-primary">Добавить задачу</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Площадка</th>
                            <th scope="col">Название</th>
                            <th scope="col">Эффективность</th>
                            <th scope="col">Статус</th>
                            <th scope="col">Создатель</th>
                            <th scope="col">Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for key,bid in bids %}
                            <tr>
                                <th scope="col">{{ key + 1 }}</th>
                                <td scope="col">{{ bid.platform }}</td>
                                <td scope="col">{{ bid.title }}</td>
                                <td scope="col">test</td>
                                <td scope="col">{{ bid.status }}</td>
                                <td scope="col">{{ bid.user }}</td>
                                <td scope="col">
                                    <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                                        <a role="button" href="/edit-bid/{{ bid.id }}"
                                           class="btn btn-secondary btn-warning">Настроить</a>
                                        <a role="button" href="/toggle-bid/{{ bid.id }}" class="btn btn-secondary">Остановить</a>
                                        <a role="button" href="/delete-bid/{{ bid.id }}"
                                           class="btn btn-secondary btn-danger">Удалить</a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

